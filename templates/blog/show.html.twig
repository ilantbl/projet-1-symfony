{% extends 'base.html.twig' %}

{% block body %}

<article>
    <h2>{{ article.title}}</h2>
    <div class="metadata">Ecrit le {{createdAt | date('d/m/y')}} à {{article.createdAt | ('H:i')}} dans la catégorie Politique</div>
    <div class="content">
        <img src="{{ article.image }}" alt="">
       {{ article.content | raw }}
    </div>
</article>

{% endblock %}